<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blanco">

    <LinearLayout
        style="@style/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/paddingcabecera">

        <TextView
            android:id="@+id/tvinfowindow_titulo"
            style="@style/txtcabeceradialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITULO" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutmarker">

        <ImageView
            android:id="@+id/imaginfowindow_detalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ico_dialog_descripcion" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/tvnfowindow_detalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DETALLES" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutmarker">

        <ImageView
            android:id="@+id/imaginfowindow_salario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ico_dialog_salario" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/tvnfowindow_salario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SALARIO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutmarker">

        <ImageView
            android:id="@+id/imaginfowindow_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ico_dialog_direccion" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/tvnfowindow_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DIRECCIÃ“N" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutmarker">

        <ImageView
            android:id="@+id/imaginfowindow_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:onClick="botontelefono"
            app:srcCompat="@drawable/ico_dialog_telefono" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/tvnfowindow_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="botontelefono"
            android:text="TELEFONO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutmarker">

        <ImageView
            android:id="@+id/imaginfowindow_correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            app:srcCompat="@drawable/ico_dialog_correo" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <TextView
            android:id="@+id/tvnfowindow_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CORREO" />



    </LinearLayout>

    <Button
        android:id="@+id/btninfowindow_compartir"
        android:padding="@dimen/paddingcabecera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="     COMPARTIR"
        android:drawableTint="@color/blanco"
        android:drawableLeft="@drawable/ico_compartir"
        android:textColor="@color/blanco"
        android:onClick="compartir"
        android:background="@drawable/selector_btn_compartir"/>



</LinearLayout>