<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingcabecera"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/verde"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvtituloDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/txtcabecera"
            android:textSize="@dimen/txtboton"
            android:padding="@dimen/paddingcabecera"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:text="TITULO" />

        <TextView
            android:id="@+id/tvocultoDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/txtcabecera"
            android:visibility="gone"
            android:text="" />

        <Button
            android:id="@+id/btnrenovarDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_azul"
            android:drawableRight="@drawable/ico_menu_nav_8"
            android:onClick="clickRenovar"
            android:padding="@dimen/paddingcabecera"
            android:stateListAnimator="@null"
            android:text="RENOVAR"
            android:textColor="@color/blanco"
            android:textSize="@dimen/txtboton" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/verde"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvfechaDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/txtcabecera"
            android:textSize="@dimen/txtboton"
            android:padding="@dimen/paddingcabecera"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:text="FECHA" />



        <Button
            android:id="@+id/btnborrarDA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_marron"
            android:drawableRight="@drawable/ico_renovar_borrar"
            android:onClick="clickBorrar"
            android:padding="@dimen/paddingcabecera"
            android:stateListAnimator="@null"
            android:text="DESACTIVAR"
            android:textColor="@color/blanco"
            android:textSize="@dimen/txtboton" />


    </LinearLayout>


</LinearLayout>
