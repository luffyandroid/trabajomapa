<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CAPublicarOfertaActivity">

    <LinearLayout
        style="@style/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/paddingcabecera">

        <ImageView
            android:id="@+id/imgcabeceraCA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icono_superior_publicar" />

        <TextView
            android:id="@+id/tvcabeceraCA"
            style="@style/txtcabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUBLICAR OFERTA"
            android:textSize="@dimen/txtcabecera" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/paddinginterior">

                //EditText NOMBRE PUESTO:

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:hint="Nombre del puesto"
                    app:hintTextAppearance="@style/etflotante">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etnombrepuestoCA"
                        style="@style/etnormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textIsSelectable="false" />

                </android.support.design.widget.TextInputLayout>

                //EditText DETALLES PUESTO:

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detalles del puesto"
                    app:hintTextAppearance="@style/etflotante"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etdetallespuestoCA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        style="@style/etnormal"
                        />

                </android.support.design.widget.TextInputLayout>

                //EditText SALARIO PUESTO:

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detalles del puesto"
                    app:hintTextAppearance="@style/etflotante">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etsalariopuestoCA"
                        style="@style/etnormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="number" />

                </android.support.design.widget.TextInputLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/espaciointeor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    //EditText DIRECCION NEGOCIO:

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dirección"
                        app:hintTextAppearance="@style/etflotante">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/etdireccionnegocioCA"
                            style="@style/etnormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15"
                            android:ems="10"
                            android:inputType="textPersonName" />

                    </android.support.design.widget.TextInputLayout>


                    //EditText GEO NEGOCIO:

                    <ImageView
                        android:id="@+id/imggeonegocioCA"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.85"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        app:srcCompat="@drawable/icono_localizacion_c" />


                </LinearLayout>

                //EditText TELEFONO NEGOCIO:

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    app:hintTextAppearance="@style/etflotante"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ettelefononegocioCA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        style="@style/etnormal"
                        />

                </android.support.design.widget.TextInputLayout>

                //EditText CORREO NEGOCIO:

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    app:hintTextAppearance="@style/etflotante"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/etcorreonegocioCA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        style="@style/etnormal"
                        />

                </android.support.design.widget.TextInputLayout>

                //EditText POLITICA:

                <CheckBox
                    android:id="@+id/checkpoliticaCA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Política de privacidad y condiciones del anuncio" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    //Boton PUBLICAR

    <ImageView
        android:id="@+id/imgpublicarCA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:srcCompat="@drawable/boton_publicar_c_selector" />


</LinearLayout>